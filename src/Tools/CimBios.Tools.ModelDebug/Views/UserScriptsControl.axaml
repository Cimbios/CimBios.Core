<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CimBios.Tools.ModelDebug.ViewModels"
             xmlns:ae="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CimBios.Tools.ModelDebug.Views.UserScriptsControl"
             x:DataType="vm:UserScriptsViewModel">
    
    <Grid RowDefinitions="Auto, 2*, Auto, *, Auto">
        
        <StackPanel Orientation="Horizontal" Spacing="5">
            <Button Classes="Small" Content="Execute" Command="{Binding Execute}"/>
            <ComboBox Classes="Small" HorizontalAlignment="Stretch"/>
        </StackPanel>
        
        <ae:TextEditor Grid.Row="1" 
                       Document="{Binding Code}"
                       ShowLineNumbers="True"
                       FontFamily="Cascadia Code,Consolas,Menlo,Monospace" />
        
        <GridSplitter Grid.Row="2" />
        
        <ae:TextEditor Grid.Row="3" 
                       Document="{Binding Result}"
                       FontFamily="Cascadia Code,Consolas,Menlo,Monospace" 
                       IsReadOnly="True"/>
        
        <Button Grid.Row="4" 
                Classes="Small" 
                Content="Clear" 
                HorizontalAlignment="Stretch"
                Command="{Binding ClearResult}"/>

    </Grid>
    
</UserControl>
