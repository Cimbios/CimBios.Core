<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CimBios.Tools.ModelDebug.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CimBios.Tools.ModelDebug.Views.PropertyDiffsObserverControl"
             x:DataType="vm:PropertyDiffsObserverViewModel">
    
    <Grid>
        
        <TreeDataGrid Grid.Row="0" x:Name="DiffsDataGrid"  
                      Source="{Binding TreeSource}"
                      FontSize="10"
                      CanUserSortColumns="False" 
                      ShowColumnHeaders="True">
            <TreeDataGrid.Styles>
                <Style Selector="TreeDataGridRow:pointerover">
                    <Setter Property="Background" Value="#80808080"/>
                </Style>
                <Style Selector="TreeDataGridRow">
                    <Setter Property="MinHeight" Value="20"/>
                </Style>
            </TreeDataGrid.Styles>
        </TreeDataGrid>
        
    </Grid>
    
</UserControl>
